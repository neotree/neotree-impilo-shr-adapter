# Source and Facility Identification
SOURCE_ID=neotree-system
FACILITY_ID=sally-mugabe-ch
FACILITY_NAME=Sally Mugabe Central Hospital

# Database Configuration (for CDC polling)
# RECOMMENDED: Use ~/.pgpass file instead of DB_PASSWORD for security
# Format: hostname:port:database:username:password
# Set permissions: chmod 600 ~/.pgpass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neotree
DB_USER=postgres
# DB_PASSWORD=  # Leave empty if using .pgpass (recommended)
DB_SSL=false
DB_SOURCE_TABLE=sessions
# CDC watermark starting date (format: YYYY-MM-DD HH:MM:SS)
# Records ingested after this date will be processed
DB_WATERMARK_START=1970-01-01 00:00:00

# OpenHIM Configuration
OPENHIM_BASE_URL=http://localhost:5001
OPENHIM_USERNAME=admin@openhim.org
OPENHIM_PASSWORD=your_openhim_password
OPENHIM_CHANNEL_PATH=/fhir
OPENHIM_CLIENT_ID=

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
ADAPTER_PORT=3001

# Security
ENCRYPTION_KEY=your-32-character-encryption-key

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=1000
